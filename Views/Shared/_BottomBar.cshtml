
@model PageModel

<div class="container m-0 p-0 btn-group" style="background-color:aliceblue; border-radius: 10px; height:45px;">
    <div class="col-4 btn-group p-1 m-1">
        <p>
            Showing @Model.StartRecord  to @Model.EndRecord of @Model.TotalItems Rows
        </p>
    </div>

    <div class="col-3 btn-group justify-content-end">
        <span class="col-7 mt-0 p-0">
            Roles per page 
        </span>

        <span class="col-5 p-1">
            <select class="form-control" id="pageSelector" asp-items="Model.GetPagesSizes()"
                onChange ="ChangePageSize(this)">
            </select>
        </span>
    </div>


    <div class="col-4 btn-group p-1 m-1 justify-content-end">
        <p>
            Showing @Model.CurrentPage  / @Model.TotalPages Pages
        </p>
    </div>
</div>
<script>
   function  ChangePageSize(obj)
   {
       var  ControllerNmae = "@this.ViewContext.RouteData.Values.["controller"].ToString()";
      
       window.location."href"="/" +  ControllerNmae + "/@Model.Action" + "/PageSize=" + obj.value + "&SearchText@Model.SearchText" + "&SortExpression =" + "@Model.SortExpression";
   }
</script>